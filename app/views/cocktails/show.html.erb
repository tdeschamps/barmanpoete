<h1> Ton cocktail bebe </h1>

<div class="container">
  <div class="col-xs-4">
    <div>
      <%= @cocktail.name %>
    </div>
    <div>
      <%= image_tag @cocktail.photo_url %>
    </div>
    <% @cocktail.dosages.all.each do |dosage| %>
      <div>
        <%= Ingredient.find(dosage.ingredient_id).name %> <%= dosage.mix %> cl
      </div>
    <% end %>
</div>